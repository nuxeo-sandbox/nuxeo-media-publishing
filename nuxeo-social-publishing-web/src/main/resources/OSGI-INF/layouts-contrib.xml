<?xml version="1.0"?>
<component name="org.nuxeo.ecm.social.publishing.web.layouts">

    <!-- layouts -->
    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">

        <layout name="publish_layout">
            <templates>
                <template mode="view">/layouts/layout_grid_template.xhtml</template>
            </templates>
            <rows>
                <row>
                    <properties mode="any">
                        <property name="nxl_gridStyleClass_0">gridStyle12</property>
                    </properties>
                    <widget>publish_panel_top</widget>
                </row>
            </rows>
        </layout>

    </extension>

    <!-- widgets -->
    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
               point="widgets">

        <widget name="publish_panel_top" type="documentActions">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
            <properties widgetMode="view">
                <property name="category">PUBLISH_PANEL_TOP</property>
            </properties>
        </widget>

        <widget name="publish_tree_widget" type="publish_tree">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
            <controls mode="any">
                <control name="requireSurroundingForm">true</control>
            </controls>
        </widget>

        <widget name="summary_social_media_widget" type="summary_social_media_type">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
            <controls mode="any">
                <control name="requireSurroundingForm">true</control>
            </controls>
        </widget>

        <widget name="publish_social_media_widget" type="publish_social_media_type">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
        </widget>

        <widget name="youtube_options_widget" type="template">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
            <properties widgetMode="any">
                <property name="template">/widgets/youtube_options_widget.xhtml</property>
            </properties>
        </widget>

        <widget name="wistia_options_widget" type="template">
            <handlingLabels>true</handlingLabels>
            <labels>
                <label mode="any"></label>
            </labels>
            <properties widgetMode="any">
                <property name="template">/widgets/wistia_options_widget.xhtml</property>
            </properties>
        </widget>

    </extension>

    <!-- widget types -->
    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="widgettypes">

        <widgetType name="publish_tree">
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">
                /widgets/publish_tab_tree_widget.xhtml
            </property>
        </widgetType>

        <widgetType name="summary_social_media_type">
            <documentation>
                This widget displays the list of published social media document.
            </documentation>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">
                /widgets/summary_social_media_widget.xhtml
            </property>
        </widgetType>

        <widgetType name="publish_social_media_type">
            <documentation>
                This widget provides an interface to upload and retrieve information about a Social Media provider.
            </documentation>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">
                /widgets/publish_tab_social_media_widget.xhtml
            </property>
        </widgetType>

    </extension>

</component>
