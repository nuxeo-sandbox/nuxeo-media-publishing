<component name="org.nuxeo.ecm.social.publishing.core.types">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>
  <require>org.nuxeo.nuxeo.ecm.platform.video.doctype</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="social_media" src="schemas/social_media.xsd" prefix="sm" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

    <facet name="SocialMedia">
      <schema name="social_media" />
    </facet>

    <doctype name="Video" append="true">
      <facet name="SocialMedia" />
    </doctype>

  </extension>

</component>